<%= display_meta_tags :separator => "|".html_safe %>

<meta charset="utf-8" />
<meta content="IE=edge" http-equiv="X-UA-Compatible" />
<meta content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" name="viewport" />



<% if !Rails.env.production? %>
  <meta content="noindex" name="robots" />
<% end %>

<%= favicon_link_tag 'apple-touch-icon-iphone.png', rel: 'apple-touch-icon', type: 'image/png' %>
<%= favicon_link_tag 'apple-touch-icon-ipad.png', rel: 'apple-touch-icon', type: 'image/png', sizes: '76x76' %>
<%= favicon_link_tag 'apple-touch-icon-iphone-retina.png', rel: 'apple-touch-icon', type: 'image/png', sizes: '120x120' %>
<%= favicon_link_tag 'apple-touch-icon-ipad-retina.png', rel: 'apple-touch-icon', type: 'image/png', sizes: '152x152' %>

<%= csrf_meta_tags %>

<%= javascript_tag do %>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', '<%= Rails.application.secrets['google_analytics'] %>', 'auto');
  ga('send', 'pageview');
<% end %>

<script type="application/ld+json">
{ "@context" : "http://schema.org",
  "@type" : "WebSite",
  "name" : "SlingPlan",
  "url" : "https://www.slingplan.com",
  "sameAs" : [ "https://twitter.com/slingplan",
    "https://www.facebook.com/slingplan.page",
    "https://plus.google.com/106534522993952784365"],
  "contactPoint" : [
    { "@type" : "ContactPoint",
      "telephone" : "+1-720-260-4680",
      "contactType" : "Sales and Support"
    } ] },
}
</script>
