<%= section_wrap_full({
  title: "Reset your password",
  subtitle: "Enter your new password below."
}) do; end %>



<div class='inner devise'>
  <div class="subsection-wrap">
    <div class='call-to-action'>
      Know your password?
      <%= link_to "Sign in", new_session_path(resource_name), class: 'sign-in' %>
      <br>
      Don't have an account?
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'sign-up' %>
    </div>

    <%= responsive_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>

      <%= f.submit "Change my password" %></div>
    <% end %>
  </div>
</div>

