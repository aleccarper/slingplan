<%= section_wrap_full({
  title: "Staffer Account",
  subtitle: ("Do you already have a SlingPlan account?&nbsp;&nbsp;" + link_to("Sign in", new_session_path(resource_name), class: 'btn sign-in')).html_safe,
  class: 'short'
}) do; end %>



<div class='inner devise'>
  <%= responsive_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class='hint'>
      <h4>The Movers and Shakers</h4>
      <br />
      Expand your horizons.  Get more work by making yourself visible on the <%= link_to 'SlingPlan map', '/map', class: 'btn btn-small' %> with a Staffer account.  Potential clients can find you on the map, view your contact info, service area, and resume if you choose to make it available.
    </div>

    <div class='subsection-wrap'>
      <div class='subtitle'>Account Credentials</div>
      <div class='section-content'>
        <div class='hint'>
          This is the log in information you will use to sign into SlingPlan.
        </div>
        <%= f.email_field :email, required: true %>
        <%= f.password_field :password, autocomplete: "off", required: true %>
        <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
      </div>
    </div>

    <div class='subsection-wrap'>
      <div class='subtitle'>Who you are</div>
      <div class='section-content'>
        <div class='hint'>
          Future customers will use this information to contact you.
        </div>
        <%= f.text_field :name, required: true %>
        <%= f.text_field :address1 %>
        <%= f.text_field :address2 %>
        <%= f.text_field :city, required: true %>
        <%= f.select :state, collection: us_states, required: true %>
        <%= f.text_field :zip, required: true %>
        <%= f.text_field :primary_phone_number %>
        <%= f.text_field :primary_email %>
        <%= f.text_field :primary_website %>
      </div>
    </div>

    <div class='subsection-wrap'>
      <div class='subtitle'>What you do</div>
      <div class='section-content'>
        <div class='hint'>
          Please fill out a description of what it is you do.
        </div>

        <%= f.text_area :description %>
      </div>
    </div>

    <div class='subsection-wrap'>
      <div class='subtitle'>Misc</div>
      <div class='section-content'>
        <%= f.time_zone_select :time_zone,
          ActiveSupport::TimeZone.us_zones,
          default: 'Central Time (US & Canada)'
        %>

        <%= f.file_field :logo_image, name: 'staffer[logo_image]', label: 'Portrait (.jpg, .png, .gif, .bmp)' %>
        <%= f.file_field :resume, name: 'staffer[resume]', label: 'Resume (.pdf, .doc, .docx, .ods)' %>
      </div>
    </div>

    <div class='accept-tos-wrap'>
      <span>
        <%= f.check_box :accepted_terms_of_service %>
        <%= f.label :accepted_terms_of_service, 'Accept ' %>
      </span>

      <span>
        <a href='/legal/terms' target='_blank'>Terms of Service</a>
      </span>
    </div>

    <%= f.submit "Next" %>

  <% end %>
</div>
